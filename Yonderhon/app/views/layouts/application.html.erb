<!DOCTYPE html>
<html>
  <head>
    <title>Yonderhon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="nav-content">
      <nav class="navbar-nav navbar-left">
        <p>Bookers</p>
      </nav>
      <nav class="navbar-nav navbar-right">

        <ul class="nav-list">
          <% if user_signed_in? %>
          <li class="nav-list-item"><%= link_to " Home", user_path(current_user.id), class: "glyphicon glyphicon-home text-muted home" %></li>
          <li class="nav-list-item"><%= link_to " Users", users_path, class: "glyphicon glyphicon-user text-muted users" %></li>
          <li class="nav-list-item"><%= link_to " Books", books_path, class: "glyphicon glyphicon-book text-muted books" %></li>
          <li class="nav-list-item"><%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out text-muted logout"%></li>
          <% else %>
          <li class="nav-list-item"><%= link_to " Home", root_path, class: "glyphicon glyphicon-home text-muted home" %></li>
          <li class="nav-list-item"><%= link_to " About", root_path, class: "glyphicon glyphicon-link text-muted about" %></li>
          <li class="nav-list-item"><%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit text-muted sign_up" %></li>
          <li class="nav-list-item"><%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in text-muted sign_in" %></li>
          <% end %>
        </ul>
      </nav>
      </div>
    </header>

    <%= yield %>

    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
